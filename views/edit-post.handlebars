    <header>
        <h1>Tech-Connect</h1>
        <ul>
            {{!-- <li><a href="/home">Home</a></li>
            <li><a href="/dashboard">Dashboard</a></li> --}}
            <li><button id="home" class="btn-no-style">Home</button></li>
            <li><button id="dashboard" class="btn-no-style">Dashboard</button></li>
            <li><button id="logout" class="btn-no-style">Logout</button></li>
        </ul>
    </header>
    <div class="home-title">
        <h3>Edit Post</h3>
    </div>
    <div class="edit-post-container">
      <form class="form edit-post">
        <div class="form-group">
          <label for="title" class="text-dark">Title</label>
          <input class="form-input" type="text" id="post-title" placeholder="{{post.title}}" />
        </div>
        <div class="form-group">
          <label for="post-content" class="text-dark">Content</label>
          <textarea id="post-content" class="form-input content-input" rows="3" cols="25" placeholder="Write about something!">{{post.content}}</textarea>
        </div>
        <div class="edit-info">
            <p>created by you on {{format_date post.created_at}}</p>
            <a href="api/users/post/{{post.id}}">{{post.comments.length}} {{format_plural "comment" post.comments.length}}</a>
        </div>
        <div class="form-group">
          <button class="btn btn-info btn-block edit-post-form" type="submit">Post</button>
          <button class="btn btn-danger btn-block delete-post-button" type="submit">Delete post</button>
        </div>
      </form>
    </div>
    

    <script src="/js/delete-post.js"></script>
    <script src="/js/edit-post.js"></script>
    <script src="/js/comment.js"></script>
    <script src="/js/logout.js"></script>
    <script src="/js/dashboard.js"></script>
</body>
</html>