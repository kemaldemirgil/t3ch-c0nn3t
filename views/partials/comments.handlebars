<div class="comments">
  {{#each this}}
  <section class="comment">
    <div class="meta">
      <i class="fa fa-user"></i> {{user.username}}<span><i class="fa fa-calendar"></i> posted on : {{format_date created_at}}</span>
    </div>
    <div class="text">
      <i class="fa fa-terminal"></i> {{comment_text}}
    </div>
  </section>
  {{/each}}
</div>