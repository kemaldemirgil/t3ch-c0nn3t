    <header>
        <h1>Tech-Connect</h1>
        <ul>
            <li><button id="home" class="btn-no-style">Home</button></li>
            <li><button id="dashboard" class="btn-no-style">Dashboard</button></li>
            <li><button id="logout" class="btn-no-style">Logout</button></li>
        </ul>
    </header>
    
    <div class="post-container">
        {{> post-details post}} 
    </div>
    <div class="previous-comments">
        <h4>Comments</h4>
        {{> comments post.comments}}
    </div>
    <form class="comment-form">
        <h3><i class="fa fa-comment"></i> Add a comment</h3>
        <div class="form-group">
          <input class="form-input" type="text" id="comment-body" placeholder="Say something!" autocomplete="off"/>
          <button class="btn btn-dark" type="submit"><i class="fa fa-share"></i> Add Comment</button>
        </div>
    </form>

    <script src="/js/logout.js"></script>
    <script src="/js/dashboard.js"></script>
    <script src="/js/comment.js"></script>
</body>
</html>